{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "wip"
      ]
    ],
    "subject-min-length": [2, "always", 4],
    "header-max-length": [2, "always", 90],
    "subject-case": [0]
  }
}
